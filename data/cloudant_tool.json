{
  "openapi": "3.0.0",
  "info": {
    "title": "Cloudant Disaster DB",
    "version": "1.0.0"
  },
  "servers": [{"url": "https://YOUR_CLOUDANT_URL_HERE"}],
  "paths": {
    "/{db}/{docid}": {
      "get": {
        "operationId": "get_disaster_news",
        "parameters": [
          { "name": "db", "in": "path", "required": true, "schema": { "type": "string" } },
          { "name": "docid", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": { "200": { "description": "OK" } }
      },
      "put": {
        "operationId": "update_disaster_map",
        "parameters": [
          { "name": "db", "in": "path", "required": true, "schema": { "type": "string" } },
          { "name": "docid", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "requestBody": { "content": { "application/json": { "schema": { "type": "object" } } } },
        "responses": { "201": { "description": "Updated" } }
      }
    }
  }
}